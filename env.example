# ===========================================
# BBD Complaint & Suggestion System
# Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://bbd_user:bbd_password@localhost:5432/bbd_complaints?schema=public

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Service Configuration
GEMINI_API_KEY=your-gemini-api-key-here
AI_SERVICE_URL=http://localhost:3002

# Storage Configuration (choose one: 's3' or 'supabase')
STORAGE_TYPE=s3

# S3-Compatible Storage (MinIO/AWS S3) - Used when STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=bbd-complaints
S3_REGION=us-east-1
S3_USE_SSL=false

# Supabase Storage - Used when STORAGE_TYPE=supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_STORAGE_BUCKET=bbd-complaints

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
AI_SERVICE_PORT=3002

# Application Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# MFA Configuration
MFA_APP_NAME=BBD Complaint System
MFA_ISSUER=BBD Educational Group

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@bbdedu.edu.in
EMAIL_FROM_NAME=BBD Complaint System

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=BBDEDU

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# SLA Configuration (in hours)
SLA_LOW=72
SLA_MEDIUM=48
SLA_HIGH=24
SLA_CRITICAL=6

# Session Configuration
SESSION_SECRET=your-session-secret-for-csrf

